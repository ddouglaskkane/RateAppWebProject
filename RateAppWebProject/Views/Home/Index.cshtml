@model IEnumerable<Ratings>
@{ Layout = "_Layout"; ViewBag.Title = "All Ratings";}

<h2>All Ratings</h2>
<a asp-action="AddRating" class="btn btn-sm btn-primary">Add Rating</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>Rate</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            @if (r.RateID < 2)
            {
                <td>Excelent</td>
            }
            @if (r.RateID == 2)
            {
                <td>Moderate</td>
            }
            @if (r.RateID > 2)
            {
                <td>Needs Improvement</td>
            }
            <td>
                <a asp-action="GetRating" asp-route-id="@r.Id">Get Rating Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>