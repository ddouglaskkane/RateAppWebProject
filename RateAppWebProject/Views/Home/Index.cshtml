@model IEnumerable<Ratings>
@{ Layout = "_Layout"; ViewBag.Title = "All Ratings";}

<h2>All Ratings</h2>
<a asp-action="AddRating" class="btn btn-sm btn-primary">Add Rating</a>
<a asp-action="GetRating" class="btn btn-sm btn-secondary">Get Rating</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>RateID</th><th>Rating Description</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.RateID</td>
                <td>@r.RateTxt</td>
                <td>
                    <a asp-action="GetRating" asp-route-id="@r.Id"><img src="/icon/edit.png" /></a>
                </td>
                <td>
                    <form asp-action="AddRating" method="post">
                        <input type="hidden" value="@r.Id" name="RateId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>