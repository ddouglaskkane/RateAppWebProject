@model Ratings
@{ Layout = "_Layout"; ViewBag.Title = "Get Rating by Id";}

<h2>Get Rating by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Rating</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Rating</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>ID</th><th>Rate ID</th><th>Rate Text</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.RateID</td>
                <td>@Model.RateTxt </td>
            </tr>
        </tbody>
    </table>
}